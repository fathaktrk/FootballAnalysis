@model List<EntityLayer.Concrete.Season>

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-4">
                <div class="card text-center align-items-center" style="width:400px">
                    <h4>Son Şampiyon</h4>
                    <img class="card-img-top" src="https://tmssl.akamaized.net/images/wappen/head/449.png?lm=1406739071" alt="Card image" style="width:40%">
                    <div class="card-body">
                        <h4 class="card-title">Trabzonspor</h4>
                        <p class="card-text">2021-2022 Süper Lig Şampiyonu Trabzonspor olmuştur.</p>
                        <a href="#" class="btn btn-primary">Takım Maçlarına Git</a>
                    </div>
                </div>
                <br />
                <div class="card text-center align-items-center" style="width:400px">
                    <h4>Son Gol Kralı</h4>
                    <img class="card-img-top" src="https://img.a.transfermarkt.technology/portrait/header/259025-1663875296.png?lm=1" alt="Card image" style="width:40%">
                    <div class="card-body">
                        <h4 class="card-title">Umut BOZOK</h4>
                        <p class="card-text">2021-2022 sezonu gol kralı 20 gol ile Umut BOZOK olmuştur.</p>
                    </div>
                </div>
            </div>
            <div>
                <h4>Süper Lig</h4>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Sene</th>
                            <th> Şampiyon </th>
                            <th> Gol Kralı </th>
                            <th>Gol Kralı Gol Sayısı</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td> @item.SeasonYear</td>
                                <td>@item.Champion </td>
                                <td>@item.GoalKing </td>
                                <td>@item.GoalKingScore </td>
                                <td> <button class="btn btn-success"> <a class="btn btn-sucess" href="AllTeamMatches?ID=@item.ID">Git</a> </button>  </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html>