@model List<EntityLayer.Concrete.Season>

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <div class="container">
        <div class="mt-4 p-5 bg-white text-white rounded">
            <center>
                <h1 class="text-black">Türkiye Süper Ligi Sezon Bilgileri</h1>
                <p class="text-black">Son Şampiyon ve Diğer Sezonlara Ait Bilgiler</p>
            </center>
        </div>
        <div class="row">
            <div class="col-6">
                <div class="card text-center align-items-center" style="width:400px">
                    <h4>Son Şampiyon</h4>
                    <img class="card-img-top" src="https://tmssl.akamaized.net/images/wappen/head/449.png?lm=1406739071" alt="Card image" style="width:40%">
                    <div class="card-body">
                        <h4 class="card-title">Trabzonspor</h4>
                        <p class="card-text">2021-2022 Süper Lig Şampiyonu Trabzonspor olmuştur.</p>
                    </div>
                </div>
            </div>
            <div class="col-6">
                <div class="card text-center align-items-center" style="width:400px">
                    <h4>Son Gol Kralı</h4>
                    <img class="card-img-top" src="https://img.a.transfermarkt.technology/portrait/header/259025-1663875296.png?lm=1" alt="Card image" style="width:40%">
                    <div class="card-body">
                        <h4 class="card-title">Umut BOZOK</h4>
                        <p class="card-text">2021-2022 sezonu gol kralı 20 gol ile Umut BOZOK olmuştur.</p>
                    </div>
                </div>
            </div>
        </div>
        <br />
        <div>
            <h2> <center>Süper Lig Sezonlara Göre Bilgiler </center></h2>
            <table class="table">
                <thead>
                    <tr>
                        <th >Sene</th>
                        <th> Şampiyon </th>
                        <th> Gol Kralı </th>
                        <th>Gol Kralı Gol Sayısı</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td> @item.SeasonYear</td>
                            <td>@item.Champion </td>
                            <td>@item.GoalKing </td>
                            <td> @item.GoalKingScore </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>