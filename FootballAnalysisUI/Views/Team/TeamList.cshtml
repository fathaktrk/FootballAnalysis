@model List<EntityLayer.Concrete.TeamInfo>
<!DOCTYPE html>
<html lang="tr">
<head>
    <title>Tüm Takımlar</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <div class="container">
        <div class="mt-4 p-5 bg-white text-white rounded">
            <center>
                <h1 class="text-black">Süper Lig Takımları</h1>
                <p class="text-black">Tüm maçlarını ve skorlarını görmek istediğiniz takımı seçiniz. </p>
            </center>
        </div>
        <div class="row">
            <div class="col">
                <h4>Süper Lig</h4>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Logo</th>
                            <th> Takım Adı </th>
                            <th>Tüm Maçları</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td> <img src="https://tmssl.akamaized.net/images/wappen/head/@(item.InUrlTeamNumber.ToString()).png?lm=1406739071" width="15%"> </td>
                                <td>@item.RealTeamName</td>
                                <td> <button class="btn btn-success"> <a class="btn btn-success" href="AllTeamMatches?ID=@item.ID">Git</a> </button>  </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html>