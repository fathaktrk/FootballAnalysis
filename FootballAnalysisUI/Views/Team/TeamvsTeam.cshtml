@addTagHelper *, Microsoft.AspNetCore.MVC.TagHelpers
@model List<SelectListItem>
<html>
<head>
    <title>Süper Lig Analiz</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"></script>
</head>
<div class="container">
    <div class="row">
        <center>
            <div class="mt-4 p-5 bg-white text-white rounded">
                <h1 class="text-black">İki Takım Arası İstatistikler</h1>
                <p class="text-black">Karşılaştırma yapmak istediğiniz iki takımı seçiniz.</p>
        </center>
    </div>
</div>
<div>
    <form method="post" asp-controller="Team" asp-action="AllTeamMatchesBetweenTwoTeam">
        <div class="text-center">
            <label>1. Takım:</label>
            <select asp-items="@Model" name="team1">
            </select>
            <img class="card-img-top" src="../assets/img/versus.png" style="width:5%" />
            <label>2. Takım:</label>
            <select asp-items="@Model" name="team2">
            </select>
        </div>
        <br />
        <div class="text-center">
            <input class="btn btn-success" type="submit" value="Git"/>
        </div>
    </form>
</div>
</div>

</html>
