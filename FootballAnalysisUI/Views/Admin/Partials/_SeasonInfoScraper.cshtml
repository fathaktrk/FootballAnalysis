<div class="col-4">
    <div class="card h-50">
        <div class="card-header">
            <center> <h4>Sezon Bilgileri </h4> </center>
            <p>Sezon bilgilerini çekmek için yılı giriniz.</p>
        </div>
        <div class="card-body">
            <center><img src="https://tmssl.akamaized.net/images/logo/header/tr1.png?lm=1639084065" title="Süper Lig" alt="Süper Lig" class=""> </center>
                <input class="form-control" name="year" id="YearText" placeholder="Yıl Giriniz" />
                <br />
                <center>  <button type="submit" class="btn btn-primary" id="addSeasonInfo"> Çek ve Kaydet </button> </center>
        </div>
    </div>
</div>
<script>
    $("#addSeasonInfo").click(() => {
        $.post("AddSeasonInfo", { "year": $("#YearText").val() }, function (data) {

            if (data == "Başarılı") {
                $("#successModal").modal('show');
            }
            else {
                $("#errorMessage").html(data);
                $("#failModal").modal('show');
            }
        });
    });
</script>