<script>
    $("#addTeam").click(() => {
        $.post("AddTeam", { "URL": $("#URLText").val(), "TeamName": $("#TeamNameText").val() }, function (data) {

            if (data == "Başarılı") {
                $("#successModal").modal('show');
            }
            else {
                $("#errorMessage").html(data);
                $("#failModal").modal('show');
            }
        });
    });
</script>